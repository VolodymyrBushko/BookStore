<section id="login-wrapper">
  <form id="login-form">

    <div id="login-title" class="row">
      <div class="col s12 m8 offset-m2 l6 offset-l3">
        <h4 class="center teal lighten-2 white-text">Sign in</h4>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12 m8 offset-m2 l6 offset-l3">
        <input id="user-email" name="user-email" type="email" class="validate">
        <label for="user-email">Email</label>
        <div id="error-user-email" class="red-text error-message"></div>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12 m8 offset-m2 l6 offset-l3">
        <input id="user-password" name="user-password" type="password" class="validate">
        <label for="user-password">Password</label>
        <div id="error-user-password" class="red-text error-message"></div>
      </div>
    </div>

    <div class="row">
      <div id="wrapper-btn-submit-signin" class="col s12 m8 offset-m2 l6 offset-l3">
        <button id="btn-submit-signin" class="btn waves-effect waves-light" type="submit" name="action">Sign in
          <i class="fas fa-paper-plane"></i>
        </button>
      </div>
    </div>

    <div class="row">
      <div class="col s12 m8 offset-m2 l6 offset-l3 center">
        <a id="sign-up-link" href="/auth/register">go to <strong>sign up</strong></a>
      </div>
    </div>

  </form>
</section>
