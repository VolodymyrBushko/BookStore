<section id="register-wrapper">
  <form id="register-form" method="post" action="/auth/register">

    <div id="register-title" class="row">
      <div class="col s12 m8 offset-m2 l6 offset-l3">
        <h4 class="center teal lighten-2 white-text">Sign up</h4>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12 m8 offset-m2 l6 offset-l3">
        <input id="user-name" name="name" type="text" class="validate">
        <label for="user-name">Name</label>
        <div id="error-name" class="red-text error-message"></div>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12 m8 offset-m2 l6 offset-l3">
        <input id="user-email" name="email" type="email" class="validate">
        <label for="user-email">Email</label>
        <div id="error-email" class="red-text error-message"></div>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12 m8 offset-m2 l6 offset-l3">
        <input id="user-password" name="password" type="password" class="validate">
        <label for="user-password">Password</label>
        <div id="error-password" class="red-text error-message"></div>
      </div>
    </div>

    <div class="row">
      <div class="input-field col s12 m8 offset-m2 l6 offset-l3">
        <input id="user-confirm-password" name="confirm-password" type="password" class="validate">
        <label for="user-confirm-password">Confirm the password</label>
        <div id="error-confirm-password" class="red-text error-message"></div>
      </div>
    </div>

    <div class="row">
      <div id="wrapper-btn-submit-signup" class="col s12 m8 offset-m2 l6 offset-l3">
        <button id="btn-submit-signup" class="btn waves-effect waves-light" type="submit" name="action">Sign up
          <i class="fas fa-paper-plane"></i>
        </button>
      </div>
    </div>

    <div class="row">
      <div class="col s12 m8 offset-m2 l6 offset-l3 center">
        <a id="sign-in-link" href="/auth/login">go to <strong>sign in</strong></a>
      </div>
    </div>

  </form>
</section>
